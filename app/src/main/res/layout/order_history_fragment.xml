<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >

    <TextView
        android:id="@+id/DateOfOrderHistoryPage"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#F000"
        android:paddingTop="4dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/TotalOrderAmountHistoryPage"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#F000"
        android:textSize="16dp"
        android:scrollbars="vertical"
        android:paddingTop="4dp"
        android:fadingEdge="vertical"
        android:textAlignment="center"
        android:scaleType="fitCenter"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/DateOfOrderHistoryPage" />

    <TextView
        android:id="@+id/ItemIdsHistoryPage"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:paddingTop="4dp"
        android:textColor="#F000"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/TotalOrderAmountHistoryPage"
        />

    <TextView
        android:id="@+id/ItemNamesHistoryPage"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#F000"
        android:textSize="16dp"
        android:scrollbars="vertical"
        android:paddingTop="4dp"
        android:fadingEdge="vertical"
        android:textAlignment="center"
        android:scaleType="fitCenter"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/ItemIdsHistoryPage" />

</RelativeLayout>
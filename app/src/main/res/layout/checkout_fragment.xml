<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >

    <TextView
        android:id="@+id/itemQtyAndPriceCheckoutPage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:textColor="#F000"
        android:paddingTop="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/dishImageCheckoutPage"
        android:layout_toEndOf="@+id/dishImageCheckoutPage" />

    <TextView
        android:id="@+id/itemNameCheckoutPage"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textColor="#F000"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:textAlignment="center"
        android:scaleType="fitCenter"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dishImageCheckoutPage"
        android:layout_alignRight="@+id/itemQtyAndPriceCheckoutPage"
        android:layout_alignEnd="@+id/itemQtyAndPriceCheckoutPage" />

    <ImageView
        android:id="@+id/dishImageCheckoutPage"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/itemNumberCheckoutPage"
        android:layout_toEndOf="@+id/itemNumberCheckoutPage" />

    <TextView
        android:id="@+id/itemNumberCheckoutPage"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:textColor="#F000"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:scaleType="center"
        />

</RelativeLayout>